<UserControl x:Class="WPF_CNC_Simulator.Vistas.Widgets.EditorGCode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:local="clr-namespace:WPF_CNC_Simulator.Vistas.Widgets"
             mc:Ignorable="d"
             d:DesignHeight="627" d:DesignWidth="426">

    <Grid Background="{StaticResource PincelGrisEditorGCode}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Editor de G-code -->
        <avalonedit:TextEditor
            Name="txtGCode"
            Grid.Row="0"
            FontFamily="Consolas"
            FontSize="14"
            Foreground="White"
            Background="#202020"
            ShowLineNumbers="True"
            SyntaxHighlighting="None"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            TextChanged="txtGCode_TextChanged" />

        <!-- Botón para aplicar cambios -->
        <Button
            Grid.Row="1"
            Margin="72 20 72 20"
            HorizontalAlignment="Stretch"
            Content="Guardar Código G"
            Background="{StaticResource PincelVerdeBotones}"
            Foreground="{StaticResource PincelBlancoTexto}"
            FontSize="14"
            FontWeight="SemiBold"
            Height="40"
            BorderThickness="0"
            Click="BotonAplicar_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border 
                        Background="{TemplateBinding Background}" 
                        BorderBrush="{TemplateBinding BorderBrush}" 
                        BorderThickness="0" 
                        CornerRadius="8">
                        <ContentPresenter 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Botón para aplicar cambios 
        <local:BotonVerde
            Grid.Row="1"
            Margin="72 20 72 20"
            HorizontalAlignment="Stretch"
            Titulo="Aplicar cambios"
             /> -->

    </Grid>
</UserControl>
