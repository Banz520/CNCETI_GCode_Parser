<UserControl x:Class="WPF_CNC_Simulator.Vistas.Widgets.EditorGCode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:local="clr-namespace:WPF_CNC_Simulator.Vistas.Widgets"
             mc:Ignorable="d"
             d:DesignHeight="627" d:DesignWidth="426">

    <Grid Background="{StaticResource PincelGrisEditorGCode}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Editor de G-code -->
        <avalonedit:TextEditor
            Name="txtGCode"
            Grid.Row="0"
            FontFamily="Consolas"
            FontSize="14"
            Foreground="White"
            Background="#202020"
            ShowLineNumbers="True"
            SyntaxHighlighting="None"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            TextChanged="txtGCode_TextChanged" />

        <!-- Botón para aplicar cambios -->
        <local:BotonVerde
            Grid.Row="1"
            Margin="72 20 72 20"
            HorizontalAlignment="Stretch"
            Titulo="Aplicar cambios"
             />

    </Grid>
</UserControl>
