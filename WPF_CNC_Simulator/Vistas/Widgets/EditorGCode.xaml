<UserControl x:Class="WPF_CNC_Simulator.Vistas.Widgets.EditorGCode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_CNC_Simulator.Vistas.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="627" d:DesignWidth="426">
    
    <Grid Background="{StaticResource PincelGrisEditorGCode}">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.15*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock 
            Grid.Row="0"
            Text="Editor de código G"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Foreground="White"/>

        <local:BotonVerde 
            Grid.Row="1"
            Grid.Column="0"
            Width="Auto"
            Margin="72 20 72 20" 
            HorizontalAlignment="Stretch"
            Titulo="Aplicar cambios"/>  


    </Grid>
</UserControl>
