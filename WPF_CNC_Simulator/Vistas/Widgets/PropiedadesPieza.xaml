<UserControl x:Class="WPF_CNC_Simulator.Vistas.Widgets.PropiedadesPieza"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_CNC_Simulator.Vistas.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Background="{StaticResource PincelGrisEditorGCode}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.7*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Text="Propiedades de la pieza"
            HorizontalAlignment="Center"
            />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Escala -->
            <TextBlock 
                Grid.Column="0"
                Grid.Row="0"
                Text="Escala:"
                VerticalAlignment="Center"
                Margin="0,2"/>
            <TextBox
                x:Name="txtEscala"
                Grid.Column="1"
                Grid.Row="0"
                Margin="5,2"
                Text="1.0"
                LostFocus="TextBox_LostFocus"
                KeyDown="TextBox_KeyDown"
                Background="{StaticResource PincelGrisFondoSimulacion}"
                Foreground="White"/>

            <!-- Posición X -->
            <TextBlock 
                Grid.Column="0"
                Grid.Row="1"
                Text="Pos.X:"
                VerticalAlignment="Center"
                Margin="0,2"/>
            <TextBox
                x:Name="txtPosicionX"
                Grid.Column="1"
                Grid.Row="1"
                Margin="5,2"
                Text="0.0"
                LostFocus="TextBox_LostFocus"
                KeyDown="TextBox_KeyDown"
                Background="{StaticResource PincelGrisFondoSimulacion}"
                Foreground="White"
                />

            <!-- Posición Y -->
            <TextBlock 
                Grid.Column="0"
                Grid.Row="2"
                Text="Pos.Y:"
                VerticalAlignment="Center"
                Margin="0,2"/>
            <TextBox
                x:Name="txtPosicionY"
                Grid.Column="1"
                Grid.Row="2"
                Margin="5,2"
                Text="0.0"
                LostFocus="TextBox_LostFocus"
                KeyDown="TextBox_KeyDown"
                Background="{StaticResource PincelGrisFondoSimulacion}"
                Foreground="White"/>

            <!-- Rotación Z -->
            <TextBlock 
                Grid.Column="0"
                Grid.Row="3"
                Text="Rot.Z:"
                VerticalAlignment="Center"
                Margin="0,2"
                />
            <TextBox
                x:Name="txtRotacionZ"
                Grid.Column="1"
                Grid.Row="3"
                Margin="5,2"
                Text="0.0"
                LostFocus="TextBox_LostFocus"
                KeyDown="TextBox_KeyDown"
                Background="{StaticResource PincelGrisFondoSimulacion}"
                Foreground="White"/>

            
            
        </Grid>
        <!-- Botón Reset -->
        <Button
        
            Grid.Row="2"
            Content="Reset"
            Click="BtnReset_Click"/>
    </Grid>
</UserControl>
