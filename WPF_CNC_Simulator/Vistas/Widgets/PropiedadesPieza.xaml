<UserControl x:Class="WPF_CNC_Simulator.Vistas.Widgets.PropiedadesPieza"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_CNC_Simulator.Vistas.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Background="{StaticResource PincelGrisEditorGCode}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="0.2*"/>
            <RowDefinition Height="0.8*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Row="0"
            Text="Propiedades de la pieza"
            HorizontalAlignment="Center"
            />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>


            <TextBlock 
                Grid.Column="0"
                Grid.Row="0"
                Text="Escala:"/>

            <TextBox
                Grid.Column="1"
                Grid.Row="0"
                />
            <TextBlock 
                Grid.Column="0"
                Grid.Row="1"
                Text="Pos.X:"/>

            <TextBox
                Grid.Column="1"
                Grid.Row="1"
                />
            <TextBlock 
                Grid.Column="0"
                Grid.Row="2"
                Text="Pos.Y:"/>

            <TextBox
                Grid.Column="1"
                Grid.Row="2"
                />
            <TextBlock 
                Grid.Column="0"
                Grid.Row="3"
                Text="Rot.Y:"/>

            <TextBox
                Grid.Column="1"
                Grid.Row="3"
                />
            
        </Grid>
    </Grid>
</UserControl>
