<UserControl x:Class="WPF_CNC_Simulator.Vistas.Widgets.MenuSuperior"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_CNC_Simulator.Vistas.Widgets"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="1280">

    <Grid Background="{StaticResource PincelNegroMenusuperior}">
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.2*"/>
            <ColumnDefinition Width="0.4*"/>
            
         
        </Grid.ColumnDefinitions>
        
        
        <local:BotonConIcono   
            Grid.Column="0" 
            Titulo="Configuración y preferencias" 
            Icono="pack://application:,,,/WPF_CNC_Simulator;component/Vistas/Imagenes/hamburger.png"
            BotonClick="BotonConfiguracion_Click"/>

     
        <local:BotonConIcono 
            Grid.Column="1" 
            Titulo="Importar modelo" 
            Icono="pack://application:,,,/WPF_CNC_Simulator;component/Vistas/Imagenes/import.png"
            BotonClick="BotonImportar_Click"/>

      
        <local:BotonConIcono 
            Grid.Column="2" 
            Titulo="Exportar código G" 
            Icono="pack://application:,,,/WPF_CNC_Simulator;component/Vistas/Imagenes/export.png"
            BotonClick="BotonExportar_Click"/>
    </Grid>
</UserControl>