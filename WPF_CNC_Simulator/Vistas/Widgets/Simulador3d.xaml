<UserControl x:Class="WPF_CNC_Simulator.Vistas.Widgets.Simulador3d"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_CNC_Simulator.Vistas.Widgets"
             xmlns:hx="http://helix-toolkit.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="627" d:DesignWidth="854">
    <Grid Background="{StaticResource PincelGrisFondoSimulacion}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>

        <local:BotonVerde 
            Titulo="Iniciar Simulación de maquinado" 
            Grid.Row="0" 
            Panel.ZIndex="1" 
            Width="284" 
            Height="53" 
            VerticalAlignment="Top" 
            Margin="0 20 0 0"/>


        <!-- Viewport 3D de Helix Toolkit -->
        <hx:HelixViewport3D x:Name="viewport" Grid.Row="0" Panel.ZIndex="0">
            <!-- Luz predeterminada -->
            <hx:DefaultLights/>

            <!-- Sistema de coordenadas -->
            <hx:CoordinateSystemVisual3D Visual3D.Transform="{Binding CoordinateSystemTransform}"/>
        </hx:HelixViewport3D>

        
        
        <!-- Panel de controles -->
        <!-- TODO: debo pasar los metodos del click del importar stl a mi menusuperior, y estos deben de tener un onclick con binding creo-->
        <Grid Grid.Row="0" Margin="10" Panel.ZIndex="1">

            <local:PropiedadesPieza
                x:Name="PropiedadesPieza"
                Panel.ZIndex="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Height="150"
                />

            <local:ControlReproduccion
                x:Name="ControlReproduccion"
                Panel.ZIndex="1" 
                Width="284" 
                Height="53" 
                VerticalAlignment="Bottom" 
                HorizontalAlignment="Center"
                Margin="0 0 0 20"
                />
        </Grid>
       
    </Grid>
</UserControl>
